<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.aixan.mapper.SetmealMapper">

    <resultMap id="BaseResultMap" type="cn.aixan.model.domain.Setmeal">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="code" column="code" jdbcType="VARCHAR"/>
            <result property="helpcode" column="helpCode" jdbcType="VARCHAR"/>
            <result property="sex" column="sex" jdbcType="CHAR"/>
            <result property="age" column="age" jdbcType="VARCHAR"/>
            <result property="price" column="price" jdbcType="FLOAT"/>
            <result property="remark" column="remark" jdbcType="VARCHAR"/>
            <result property="attention" column="attention" jdbcType="VARCHAR"/>
            <result property="img" column="img" jdbcType="VARCHAR"/>
            <result property="deleted" column="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,code,
        helpCode,sex,age,
        price,remark,attention,
        img,deleted
    </sql>

    <resultMap id="setMealDetails" type="setmeal" autoMapping="true">
        <id column="id" property="id" />
        <collection property="checkGroups" ofType="checkgroup">
            <id column="tcId" property="id" />
            <result property="name" column="tcName" />
            <result property="remark" column="tcRemark" />
            <collection property="checkItems" ofType="checkitem">
                <id column="tiId" property="id" />
                <result column="tiName" property="name" />
            </collection>
        </collection>

    </resultMap>
    
    <select id="selectDetails" resultMap="setMealDetails">
        select
            ts.*,tc.id as tcId, tc.name as tcName,tc.remark as tcRemark,ti.id as tiId,ti.name as tiName
        from t_setmeal ts
                 inner join t_setmeal_checkgroup tsc on ts.id = tsc.setmeal_id
                 inner join t_checkgroup tc on tc.id = tsc.checkgroup_id
                 inner join t_checkgroup_checkitem tcc on tc.id = tcc.checkgroup_id
                 inner join t_checkitem ti on tcc.checkitem_id = ti.id
        where ts.deleted = 1 and tc.deleted = 1 and ti.deleted = 1 and ts.id = #{id}
    </select>
</mapper>
